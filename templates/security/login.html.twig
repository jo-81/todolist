{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="bg-secondary bg-opacity-25 vh-100 d-flex">
    <div class="container">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6">
                <form method="post" class="p-4 p-lg-5 bg-white">
                    <header class="mb-4">
                        <h1 class="h3 mb-0 fw-semibold text-uppercase title">Connexion</h1>
                    </header>

                    <div>
                        <div class="mb-3">
                            <label class="form-label" for="inputEmail">Adresse email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email"
                                required autofocus>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                        
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        
                        <div>
                            <button class="btn btn-primary" type="submit">Connexion</button>
                        </div>
                    </div>

                    {% if error %}
                        <twig:Bootstrap:Alert 
                            class="mt-3 mb-0"
                            type="danger" 
                            message="{{ error.messageKey|trans(error.messageData, 'security') }}"
                        />
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
