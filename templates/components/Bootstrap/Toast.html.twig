<div{{ attributes.defaults({class: "toast align-items-center fade show position-absolute text-bg-" ~ type}) }}
    style="top: 5px; right: 5px" 
    role="alert" 
    aria-live="assertive" 
    aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">{{ message }}</div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
</div>
